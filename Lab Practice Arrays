console.log(`Hi, ${names[8]}. How are you?`)
console.log(`Hi, ${names[9]}. How are you?`)


// PART TWO -- LOOPS
// Let's loop through the array.
for(let name of names) {
  // TODO 4: Say hi to each person again.
  // This time use a loop.
  console.log(`Hi, ${name}`);
}

// TODO 5: Now say good-bye to each person using a loop.
for(let name of names) {
  console.log(`Good-bye, ${name}`);
}

console.log("Good-bye".length > 4);







