// PART 1 -- BUILDING AN ARRAY
// Let's build an array of names.

// This in an empty array.
let names = [];

// Put a name on the array.
names.push("Alice");
names.push("John");
names.push("Katy");
names.push("Maria");
names.push("Josue");
names.push("Ty");
names.push("Desiree");
names.push("Arthur");
names.push("Robert");
names.push("Stefan");

// Log it to the console.
console.log(names[0]);
console.log(names[1]);
console.log(names[2]);
console.log(names[3]);
console.log(names[4]);
console.log(names[5]);
console.log(names[6]);
console.log(names[7]);
console.log(names[8]);
console.log(names[9]);



// TODO 1: Put 9 more names on the array for a total of 10. DONE!
// TODO 2: log them to the console. DONE!


// There should now be 10 names.
console.log(`Now there are ${names.length} names in the array.`);

// Let's say hi to each person using string interpolation.
console.log(`Hi, ${names[0]}. How are you?`)
// TODO 3: Say hi to each person.
